{
  "name": "maid.ts",
  "version": "2.2.7",
  "description": "WIUT BIS group manager & handler",
  "main": "dist/app.js",
  "scripts": {
    "init": "./update-module.sh",
    "clean": "rm -rf node_modules && rm -rf dist && rm -rf data",

    "lint": "eslint .",
    "format": "prettier --check --write \"{**/*,*}.{ts,json,md}\"",

    "build": "swc src -d dist",
    "build:watch": "swc src -d dist -w",

    "start": "node dist/app.js",
    "dev": "concurrently \"pnpm run build:watch\" \"nodemon --watch \"dist/**/*\" -e js ./dist/app.js\""
  },
  "keywords": [
    "nyaasi",
    "telegram",
    "bot"
  ],
  "engines": {
    "node": ">=16.x"
  },
  "repository": "https://github.com/mad-maids/maid.ts",
  "author": "Mad Maids (https://maid.uz)",
  "license": "CC0-1.0",
  "dependencies": {
    "@2toad/profanity": "^1.3.1",
    "@grammyjs/conversations": "^1.1.2",
    "@supabase/supabase-js": "^1.29.1",
    "chalk": "^4.1.2",
    "dotenv": "^8.2.0",
    "fastify": "^4.23.2",
    "forever": "^4.0.1",
    "grammy": "^1.19.0",
    "is-reachable": "^5.0.0",
    "node-cron": "^2.0.3",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.90",
    "@telegraf/core": "^1.1.0",
    "@types/node": "^14.18.63",
    "@types/node-schedule": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "proseWrap": "always"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "camelcase": "off",
      "no-prototype-builtins": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
